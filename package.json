{
  "name": "grubana-monorepo",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "install:all": "npm install && npm install --prefix web && npm install --prefix grubana-mobile && npm install --prefix shared/functions",
    "dev:web": "npm run dev --prefix web",
    "build:web": "npm run build --prefix web",
    "deploy:web": "npm run deploy --prefix web",
    "start:mobile": "npm start --prefix grubana-mobile",
    "build:ios": "npm run build:ios --prefix grubana-mobile",
    "build:android": "npm run build:android --prefix grubana-mobile",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:all": "npm run build:web && firebase deploy",
    "clean": "rm -rf node_modules web/node_modules grubana-mobile/node_modules shared/functions/node_modules web/dist",
    "lint": "echo 'Add linting scripts here'"
  },
  "devDependencies": {
    "firebase-tools": "^13.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "firebase-admin": "^13.5.0"
  }
}
