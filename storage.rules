rules_version = '2';

// Allow authenticated users to upload and manage their photos
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload truck photos
    match /truck-photos/{filename} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to upload menu photos  
    match /menu-photos/{filename} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to upload menu item photos (organized by user ID)
    match /menuItems/{userId}/{filename} {
      allow read: if true; // Allow public read for menu display
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload menu item photos (legacy path with hyphen)
    match /menu-items/{userId}/{filename} {
      allow read: if true; // Allow public read for menu display
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Legacy uploads folder (for backward compatibility)
    match /uploads/{filename} {
      allow read, write: if request.auth != null;
    }
    
    // Event organizer media uploads
    match /uploads/event-organizers/{filename} {
      allow read, write: if request.auth != null;
    }
    
    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
